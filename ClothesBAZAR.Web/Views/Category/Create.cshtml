    <div class="jumbotron">
        <h2 style="text-align:center;color:red">Create Category</h2>
    </div>
    <div>
        <form action="" method="post">
            <div class="form-group">
                <label>Name</label>
                <input type="text" id="name" name="name" class="form-control" required />
